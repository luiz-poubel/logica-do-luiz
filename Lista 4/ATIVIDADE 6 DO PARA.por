programa
{
	inteiro numero, soma = 0
	funcao inicio()
	{
		para(inteiro i = 1; i<=7; i++){
			escreva("Digite o numero que deseja somar:")
			leia(numero)
			soma = soma + numero
		}
		escreva("A somatoria dos seus 7 numeros foi: ",soma)
	}
}
